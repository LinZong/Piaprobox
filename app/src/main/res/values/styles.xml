<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/PiaproColor</item>
    </style>


    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_screen_bg
        </item>
        <item name="android:navigationBarColor">@color/PiaproColor</item>
    </style>

    <style name="GenericTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">8pt</item>
    </style>


    <style name="RecommendCategoryTagView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">9.5pt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LargeTextView" parent="GenericTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">#2B2B2B</item>
    </style>

    <style name="SmallTextView" parent="GenericTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">#2B2B2B</item>
    </style>

    <style name="MainFragmentSmallInfoText" parent="SmallTextView">
        <item name="android:textSize">5pt</item>
        <item name="android:textColor">@color/MainFragmentItemSmallInfoIcon</item>
    </style>

    <style name="MainFragmentMidInfoText" parent="SmallTextView">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/MainFragmentItemSmallInfoIcon</item>
    </style>

    <style name="MusicPlayerControlButton">
        <item name="android:layout_width">28dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="MusicPlayerToolbarTitle">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
