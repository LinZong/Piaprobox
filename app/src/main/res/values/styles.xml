<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/PiaproColor</item>
    </style>


    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splash_screen_bg
        </item>
        <item name="android:navigationBarColor">@color/PiaproColor</item>
    </style>


    <style name="SharedContentStyle" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="ShareImageViewContentStyle" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="GenericTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">8pt</item>
    </style>


    <style name="RecommendCategoryTagView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">9.5pt</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="LargeTextView" parent="GenericTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">#2B2B2B</item>
    </style>

    <style name="SmallTextView" parent="GenericTextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">#2B2B2B</item>
    </style>

    <style name="SmallSmallTextView" parent="SmallTextView">
        <item name="android:textSize">6.4pt</item>
    </style>

    <style name="MainFragmentSmallInfoText" parent="SmallTextView">
        <item name="android:textSize">5pt</item>
        <item name="android:textColor">@color/MainFragmentItemSmallInfoIcon</item>
    </style>

    <style name="MainFragmentMidInfoText" parent="SmallTextView">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/MainFragmentItemSmallInfoIcon</item>
    </style>

    <style name="MusicPlayerControlButton">
        <item name="android:layout_width">28dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="MusicPlayerToolbarTitle">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageButtonWithRipple">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/DarkPiaproColor</item>
    </style>
</resources>
