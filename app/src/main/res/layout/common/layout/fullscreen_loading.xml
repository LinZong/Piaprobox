<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/loading_fullscreen_modal"
                android:layout_height="match_parent">
    <RelativeLayout android:layout_width="100dp"
                    android:background="@drawable/loading_indicator_background"
                    android:layout_height="100dp"
                    android:id="@+id/LoadingIndicator_ProgressBar_Container"
                    android:layout_centerInParent="true">

        <ProgressBar
                android:layout_centerInParent="true"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/LoadingIndicator_ProgressBar"/>
    </RelativeLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_below="@id/LoadingIndicator_ProgressBar_Container"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="12dp"
              android:layout_height="wrap_content"
              android:id="@+id/LoadingIndicator_TextView"
              style="@style/GenericTextView"/>
</RelativeLayout>