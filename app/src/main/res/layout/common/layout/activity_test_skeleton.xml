<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              tools:context=".Activity.TestSkeletonActivity"
              android:orientation="vertical"
              android:layout_height="match_parent">


    <com.nemesiss.dev.piaprobox.View.Common.LoadingLineIndicator
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Login"
            android:onClick="login"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read user info"
            android:onClick="readUserInfo"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"
            android:onClick="logout"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Logs"
            android:onClick="viewLog"/>

</LinearLayout>